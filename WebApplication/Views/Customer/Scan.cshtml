@model WebApplication.Models.Person
@{
    ViewData["Title"] = "Scan";
}
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <h2 class="text-success header-text">Поиск по ФИО</h2>
            <form method="get" action="~/Customer/GetResultOfScan">
                <div class="form-group">
                    <label asp-for="firstName" class="control-label">Имя</label>
                    <input asp-for="firstName" class="form-control" placeholder="Имя человека" />
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="control-label">Фамилия</label>
                    <input asp-for="lastName" class="form-control" placeholder="Фамилия человека" />
                </div>
                <div class="form-group">
                    <label asp-for="middleName" class="control-label">Отчество</label>
                    <input asp-for="middleName" class="form-control" placeholder="Отчество человека" />
                </div>
                <div class="input-group">
                    <input type="submit" class="btn btn-success btn-block" value="Поиск" />
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
        <div>
            <a asp-controller="Customer" asp-action="Read">Назад к списку</a>
        </div>
    </div>
